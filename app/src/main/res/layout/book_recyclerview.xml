<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/beige"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/lastest_bookcover"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:src="@drawable/coverplaceholder"
        android:padding="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/beige"
            android:orientation="horizontal"
            android:gravity="top">

            <TextView
                android:id="@+id/lastest_booktitle"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/lastest_readstatus"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Read Status"
                android:gravity="right"
                android:padding="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/beige"
            android:orientation="horizontal"
            android:layout_below="@+id/linearlayout"
            android:padding="15dp">


            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_full" />
            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_full" />
            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_full" />
            <ImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_full" />
            <ImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_full" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/more"
            android:layout_width="236dp"
            android:layout_height="62dp"
            android:layout_below="@+id/rating"
            android:layout_marginTop="26dp"
            android:background="@color/beige"
            android:orientation="horizontal">


        </LinearLayout>

        <ImageView
            android:id="@+id/lastest_owned"
            android:layout_width="93dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:src="@drawable/owned" />


    </RelativeLayout>


</LinearLayout>



